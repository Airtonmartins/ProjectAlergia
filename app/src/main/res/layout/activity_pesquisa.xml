
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="mpoo.ufrpe.projetoalergia.gui.PesquisaActivity">





    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="RemÃ©dio"
        android:textColorHint="#000080"
        android:id="@+id/edtPesquisa"
        android:background="@drawable/barra_de_texto"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ibCamera"
        android:layout_toEndOf="@+id/ibCamera" />


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ibCamera"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/icone_camera"/>



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPesquisa"
        android:textColor="#000080"
        android:text="recomendar com base na rede"
        android:checked="false"
        android:layout_below="@+id/edtPesquisa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pesquisarString"
        android:background="@drawable/botao"
        android:id="@+id/btnPesquisar"
        android:layout_below="@+id/edtPesquisa"
        android:layout_alignRight="@+id/edtPesquisa"
        android:layout_alignEnd="@+id/edtPesquisa"
        android:layout_toEndOf="@+id/cbPesquisa"
        android:layout_alignBottom="@+id/cbPesquisa"
        android:layout_toRightOf="@+id/cbPesquisa"
        android:layout_marginLeft="10dp" />



    <ListView
        android:layout_below="@id/btnPesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/lstRemedios"
        android:divider="#ECECEC"
        android:dividerHeight="1sp"
        android:layout_weight="1" />



</RelativeLayout>
